<!--  Include headers here -->
<%- include('partials/head') %>

  <h1 class="text-center m-2"><%= quiz.title %></h1>

  <h2 class="text-center m-2"><%= quiz.description %></h1>

  <h2 class="small text-end">Par <%= quiz.author.fullName %></h2>

  <h2 class="small text-end">Date de création : <%= new Intl.DateTimeFormat('fr-FR', { dateStyle: 'full', timeStyle: 'short', timeZone: 'Europe/Paris' }).format(quiz.created_at) %></h2>

  <h3>Thèmes</h3>
  <ul class="mb-4 p-0">
    <% for( let i = 0; i < quiz.tags.length; i++ ) { %>
      <li class="badge bg-primary"><%= quiz.tags[i].name %></li>
    <% } %>
  </ul>

  <h3>Questions</h3>

  <% for( let i = 0; i < quiz.questions.length; i++ ) { %>
    <span class="badge bg-info"><%= quiz.questions[i].level.name %></span>
    <p class="fw-bold mb-1"><%= quiz.questions[i].description %></p>
    <div class="mb-3 ms-2">
      <% for( let j = 0; j < quiz.questions[i].answers.length; j++ ) { %>
        <div>
          <input type="radio" id="#" name="#" value="#">
          <label for="#"><%=  quiz.questions[i].answers[j].description  %></label>
        </div>
      <% } %>
    </div>
    <p class="fst-italic text-secondary"><%= quiz.questions[i].anecdote %></p>
  <% } %>


  <button class="d-block mx-auto btn btn-primary mb-4">Envoyer</button>

<%- include('partials/footer') %>